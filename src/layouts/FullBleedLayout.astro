---
import BaseLayout, { type Props as BaseProps } from "./BaseLayout.astro";

export type Props = BaseProps;
---

<BaseLayout {...Astro.props}>
  <slot />
</BaseLayout>

<style is:global>
  main {
    display: grid;
    grid-template-columns:
      1fr
      min(65ch, 100%)
      1fr;
  }

  main > * {
    grid-column: 2;
  }

  .full-bleed {
    grid-column: 1/4;
    margin: 0 auto;
    z-index: 1;
  }
</style>
