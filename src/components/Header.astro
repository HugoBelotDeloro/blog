---
import MobileNavigation from "./MobileMenu.astro";
import NavBar from "./NavBar.astro";
---

<header>
  <NavBar class="navbar" />
  <MobileNavigation class="mobile-nav" />
</header>

<style>
  header {
    display: unset;
  }

  @media screen and (min-width: 636px) {
    .mobile-nav {
      display: none;
    }
  }

  @media screen and not (min-width: 636px) {
    .navbar {
      display: none;
    }
  }
</style>
