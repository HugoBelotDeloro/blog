---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<p class="tag">
  <a href={`/tags/${tag}`}>{tag}</a>
</p>

<style>
  .tag {
    margin: 0.25em;
    background-color: var(--bg-color-2);
    box-shadow: 2px 3px 3px var(--shadow-color);
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    font-weight: bold;
  }
</style>
